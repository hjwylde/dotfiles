#!/bin/bash

# Toggle the external display between HDMI on and HDMI off

IN="eDP1"
EXT="HDMI1"
EXT_MODE="1360x768"

if (xrandr | grep "$EXT connected $EXT_MODE" ) || ( xrandr | grep "$EXT disconnected" ); then
    xrandr --output $IN --auto --output $EXT --off
else
    xrandr --output $IN --mode 1920x1080 --primary --output $EXT --mode $EXT_MODE --right-of $IN
fi

