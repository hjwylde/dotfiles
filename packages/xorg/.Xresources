! URxvt settings

! Don't show a scrollbar, don't scroll on tty output, do scroll on keypress
URxvt*scrollBar: false
URxvt*scrollTtyKeypress: true
URxvt*scrollTtyOutput: false
URxvt*saveLines: 1000

! Set font, letter spacing and fade by 30% when focus lost
URxvt*font: xft:DejaVuSansMono:autohint=true:pixelsize=18
URxvt*letterSpace: -1
URxvt*fading: 30
URxvt*internalBorder: 3
URxvt*intensityStyles: false

URxvt*loginShell: true
URxvt*visualBell: true

