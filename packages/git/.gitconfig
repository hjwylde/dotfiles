[user]
    name = Henry J. Wylde
    email = public@hjwylde.com
    signingkey = 20EBA79A

[core]
    excludesFile = ~/.gitignore-global

[push]
    default = simple

[merge]
    tool = vimdiff

[diff]
    algorithm = minimal

[alias]
    dlast       = diff HEAD~1 HEAD
    dstaged     = diff --cached
    gl          = log --graph --date=short --pretty=format:'%C(yellow)%h %C(blue)%ad%Creset %C(bold)%<(80,trunc)%s%Creset %C(blue)%<(15,trunc)%an %C(red)%d'
    l           = log --date=short --pretty=format:'%C(yellow)%h %C(blue)%ad%Creset %C(bold)%<(80,trunc)%s%Creset %C(blue)%<(15,trunc)%an %C(red)%d'
    me          = log --author='Henry J. Wylde' --date=short --pretty=format:'%C(yellow)%h %C(blue)%ad%Creset %C(bold)%<(80,trunc)%s%Creset %C(blue)%<(15,trunc)%an %C(red)%d'
    s           = status -s
    uncommit    = reset --soft HEAD^
    unstage     = reset HEAD

