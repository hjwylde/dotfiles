[user]
    name = Henry J. Wylde
    email = public@hjwylde.com
    signingkey = 20EBA79A

[core]
    excludesFile = ~/.gitignore-global

[push]
    default = simple

[merge]
    tool = vimdiff

[diff]
    algorithm = minimal

[alias]
    gl          = log --graph --date=short --pretty=format:'%C(yellow)%h %C(blue)%ad%Creset %C(bold)%<(80,trunc)%s%Creset %C(blue)%<(15,trunc)%an %C(red)%d'
    l           = log --date=short --pretty=format:'%C(yellow)%h %C(blue)%ad%Creset %C(bold)%<(80,trunc)%s%Creset %C(blue)%<(15,trunc)%an %C(red)%d'
    last        = diff HEAD~1 HEAD
    me          = !git l --author='Henry J. Wylde'
    s           = status -s
    staged      = diff --cached
    todo        = grep 'TODO (hjw)'
    uncommit    = reset --soft HEAD^
    unstage     = reset HEAD

[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
