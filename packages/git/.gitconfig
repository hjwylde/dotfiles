[user]
    name = Henry J. Wylde
    email = public@hjwylde.com
    signingkey = 20EBA79A

[push]
    default = simple

[merge]
    tool = vimdiff

[diff]
    algorithm = minimal

[alias]
    dlast       = diff HEAD~1 HEAD
    dstaged     = diff --cached
    gl          = log --graph --date=short --pretty=format:'%C(yellow)%h %C(blue bold)%ad %C(white)%<(80,trunc)%s%Creset %an %C(red dim)%d'
    gme         = log --author='Henry J. Wylde' --graph --date=short --pretty=format:'%C(yellow)%h %C(blue bold)%ad %C(white)%<(80,trunc)%s%Creset %an %C(red dim)%d'
    l           = log --date=short --pretty=format:'%C(yellow)%h %C(blue bold)%ad %C(white)%<(80,trunc)%s%Creset %<(15,trunc)%an %C(red dim)%d'
    me          = log --author='Henry J. Wylde' --date=short --pretty=format:'%C(yellow)%h %C(blue bold)%ad %C(white)%<(80,trunc)%s%Creset %<(15,trunc)%an %C(red dim)%d'
    s           = status -s
    uncommit    = reset --soft HEAD^
    unstage     = reset HEAD

